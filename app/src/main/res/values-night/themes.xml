<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/black_dark</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>

        <item name="android:textColorPrimary">@color/white_pure</item>
        <item name="android:textColor">@color/white_pure</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_standard</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Others application theme. -->
    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.MyToolbar" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@android:color/white</item>
    </style>

    <!-- Styles -->
    <style name="SearchBar" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/holo_gray</item>
        <item name="android:backgroundTint">@color/holo_gray</item>
        <item name="android:queryBackground">?colorAccent</item>
        <item name="queryHint">@string/empty</item>
    </style>

    <style name="PlaceholderText" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white_pure</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleCommon" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white_pure</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>